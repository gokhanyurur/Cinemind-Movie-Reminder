<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spidermanbgblur"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="SIGN UP"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:text="EMAIL ADDRESS"/>
            <EditText
                android:id="@+id/emailRegisterText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:hint=" example@mail.com"
                android:textColorHint="#b6b6b6"
                android:theme="@style/MyEditTextTheme"
                android:drawableLeft="@drawable/ic_email_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:text="PASSWORD"/>
            <EditText
                android:id="@+id/passwordRegisterText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:hint=" *********"
                android:textColorHint="#b6b6b6"
                android:inputType="textPassword"
                android:theme="@style/MyEditTextTheme"
                android:paddingBottom="13dp"
                android:drawableLeft="@drawable/ic_lock" />

            <Button
                android:id="@+id/signUpButtonReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:text="SIGN UP"
                android:background="@drawable/redbutton"/>




        </LinearLayout>
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <Button
        android:id="@+id/signInButtonReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:text="ALREADY HAVE AND ACCOUNT? SIGN IN HERE"
        android:background="#77000000"/>
</RelativeLayout>


</RelativeLayout>